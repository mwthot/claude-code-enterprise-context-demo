{
  "permissions": {
    "allow": [
      "Write(src/main/**/*.java)",
      "Write(src/test/**/*.java)",
      "Write(src/main/resources/**/*.{yml,yaml,sql,properties})",
      "Bash(mvn clean compile:*)",
      "Bash(mvn test:*)",
      "Bash(mvn spring-boot:run:*)",
      "Bash(flyway:*)",
      "Edit(src/main/resources/db/migration/**/*.sql)"
    ],
    "deny": [
      "Write(target/**)",
      "Edit(src/main/resources/application-prod.yml)",
      "Bash(mvn deploy:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file=\"$1\"; if [[ \"$file\" =~ \\.java$ ]]; then mvn spotless:apply -q -f $(dirname \"$file\")/../../.. 2>/dev/null || true; fi",
            "timeout": 30
          }
        ]
      }
    ]
  }
}